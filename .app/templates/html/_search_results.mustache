<ul class="search-results">

  {{#foreach post in site_posts}}
  <li class="result result--post">
    <h3><a href="{{post.url}}">{{post.title}}</a></h3>
    <div>{{post.descr}}</div>
    <div><span>Tags:</span> <em>{{post.tags}}</em></div>
  </li>
  {{/foreach}}

  {{#foreach event in site_events}}
  <li class="result result--event">
    <h3><a href="{{event.url}}">{{event.title}}</a></h3>
    <div>{{event.descr}}</div>
    <div>
      <span>Date:</span> <em>{{event.start_date | time_tag 'to_long_string' iso8601}}</em>
    </div>
    <div>
      <span>Category:</span> <em>{{event.category}}</em>
    </div>
    <div>
    <div>
      <span>City:</span> <em>{{event.city}}</em>
    </div>
    <div>
      <span>Venue:</span> <em>{{event.venue}}</em>
    </div>
    <div>
      <span>Tags:</span> <em>{{event.tags}}</em>
    </div>
  </li>
  {{/foreach}}

</ul>
