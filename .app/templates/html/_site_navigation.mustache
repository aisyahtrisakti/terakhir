<ul id="site-navigation" class="site-navigation">

  <li class="site-navigation--main-pages">
    <h3>Pages</h3>
    <ul>
    {{#foreach page in site_header_pages}}
      <li><a href="{{page.url}}">{{page.title}}</a></li>
    {{/foreach}}
    </ul>
  </li>

  <li class="site-navigation--recent-posts">
    <h3>Recent posts</h3>
    <ul>
    {{#foreach post in site_posts | limit 5}}
      <li><a href="{{post.url}}">{{post.title}}</a></li>
    {{/foreach}}
    </ul>
  </li>

  <li class="site-navigation--categories">
    <h3>Categories</h3>
    <ul>
    {{#foreach category in site_categories}}
      <li>
        <a href="{{category.url}}">{{category.title}}</a>
      </li>
    {{/foreach}}
    </ul>
  </li>

  <li class="site-navigation--tags">
    <h3>Tags</h3>
    <div>
    {{#foreach tag in site_tags}}
      <a href="{{tag.url}}">{{tag.title}}</a>,
    {{/foreach}}
    </div>
  </li>

</ul>
