<script id="meta-ld" type="application/ld+json">
{
  "@context": "http://schema.org/",
  "@type": "Article",
  "headline": "{{page_title}}",
  "datePublished": "{{page_created}}",
  "dateModified": "{{page_modified}}",
  "description": "{{page_descr}}",
  "keywords": "{{page_keywords}}",
  "image": {
    "@type": "ImageObject",
    "height": "512",
    "width": "512",
    "url": "https://{{blog_domain}}{{blog_url}}/assets/icons/android-chrome-512x512.png"
  },
  "author": "{{page_author}}",
  "publisher": {
    "@type": "Organization",
    "logo": {
      "@type": "ImageObject",
      "url": "https://{{blog_domain}}{{blog_url}}/assets/icons/android-chrome-512x512.png"
    },
    "name": "{{blog_title}}"
  },
  "mainEntityOfPage": "https://{{blog_domain}}{{page_url}}#content",
  "articleBody": "{{page_descr}}"
}
</script>
