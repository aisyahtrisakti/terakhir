#!/bin/bash

# Update all index pages across the site which list posts,
# because a new post may have been added.

# Usage:  update_pages [-all]

# if -all is give, all HTML pages will be re-built, not just the index
# pages (categories, tags, archive, home/recent posts, etc)

# load the users config file from $HOME
[ -f $HOME/.bl/config ] && source $HOME/.bl/config
# load the local config file
[ -f .site_config ] && source .site_config


cp posts.csv /tmp/posts.csv

cut -f1-2 -d'|' /tmp/posts.csv \
  | while read line
    do
      mdshfile="${line//|//}"

      if [ ! -f "posts/$mdshfile" ];then
        # the .mdsh file doesnt exist, remove post from posts list
        echo "Removing: posts/$mdshfile"
        grep -v "^$line" posts.csv > /tmp/posts.csv
        mv /tmp/posts.csv posts.csv

      else
        # mdsh file exists
        # so if the .md file doesnt exist, rebuilt it

        if [ "$1" = "-all" ];then
          # update (rebuild) all posts pages
          echo "Updating: posts/${mdshfile//.mdsh/.html}"
          ./create_page "posts/$mdshfile" "posts/${mdshfile//.mdsh/.html}"
        fi
      fi

    done

echo "Updating: index.html"
. create_page > index.html

# update main archive page
all_posts="$(cut -f1,2 -d'|' ./posts.csv | tr '|' '/' | sort -u | sort -r)"
if [ "$all_posts" != "" ];then
  echo "Updating: archive.html"
  all_post_html='<h2>Archive</h2><ul class="archive-posts posts">'
  for post in $all_posts
  do
    post_title="$(grep -m1 "|$(basename $post)|" posts.csv | cut -f3 -d'|')"
    post_date=$(dirname "$post")
    post_date="${post_date//posts\//}"
    post="posts/$post"
    [ ! -f "$post" ] && continue
    all_post_html="${all_post_html}<li><span>${post_date}</span> <a href=\"${blog_url}/${post//.mdsh/.html}\">${post_title}</a></li>"
  done
  all_post_html="${all_post_html}</ul>"
  touch archive.html
  ./create_page "$all_post_html" archive.html
fi



# update categories index page
echo "Updating: categories.html"
touch categories.html
./create_page "<h2>Categories</h2>\n$(list_categories)" categories.html

# update category pages
category_posts=''
site_categories="$(cut -f5 -d'|' ./posts.csv | tr ',' '\n'| sort -u)"
for category in $site_categories
do
  category_posts="<h2>Category: $category</h2>$(list_posts_in_category "${category}")"
  [ "$category_posts" = "" ] && continue
  echo "Updating: categories/$category.html"
  touch categories/$category.html
  ./create_page "$category_posts" categories/$category.html
done



# update tags index page
echo "Updating: tags.html"
./create_page "<h2>Tags</h2>\n$(list_tags)" tags.html

# update tags pages
site_tags="$(cut -f6 -d'|' ./posts.csv | tr ',' '\n'| sort -u)"
for tag in $site_tags
do
  tagged_posts="<h2>Tag: $tag</h2>$(list_posts_matching_tag "$tag")"
  [ "$tagged_posts" = "" ] && continue
  echo "Updating: tags/$tag.html"
  touch tags/$tag.html
  ./create_page "$tagged_posts" tags/$tag.html
done

# update 404 page
echo "Updating: 404.html"
./create_page '<h2>Page not found</h2>
<p>Sorry, the page you are looking for could not be found!</p>
<hr>
<p>Please use the menu to find something else.</p>' > 404.html

exit 0
